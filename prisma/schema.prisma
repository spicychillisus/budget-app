generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int            @id @default(autoincrement())
  firstName    String        @map("first_name")
  lastName     String        @map("last_name")
  username     String        @unique
  email        String        @unique
  birthday     DateTime
  password     String
  userId       String        @unique @map("user_id")
  accountActivationStatus Boolean @map("account_activation_status")
  accountStatus    String  @map("account_status")
  transactions transactions[]
}

model user_money {
  id        Int    @id @default(autoincrement())
  userId    Int @unique @map("user_id")
  username  String
  budget    Float
  income    Float
  expenses  Float
  savings   Float
  spent     Float
  excess    Float
  remaining Float
}

model transactions {
  id                 Int    @id @default(autoincrement())
  username           String
  transactionName    String @map("transaction_name")
  transactionType    String @map("transaction_type")
  transactionDetails String @map("transaction_details")
  trasactionAmount   Float  @map("trasaction_amount")
  transactionDate    String @map("transaction_date")
  userId             Int    @unique @map("user_id")
  users              users  @relation(fields: [userId], references: [id])
}

model user_achievements {
  id        Int    @id @default(autoincrement())
  userId    Int @unique @map("user_id")
  username  String
  achievements String[]
}
